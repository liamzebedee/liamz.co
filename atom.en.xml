---
layout: nil
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

<id>http://{{ site.hostname }}{{ page.id }}</id>
<title>{%t site.title %}</title>
<subtitle>{%t site.description %}</subtitle>
<updated>{{ site.time | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
<link type="text/html" href="http://{{ site.hostname }}/en/"/>
<icon>/assets/icon.png</icon>
<rights>{%t site.rights %}</rights>
<!-- TODO set lang of feed -->


{% for post in site.tags.en %}
<entry>
	<title>{{ post.title }}</title>
	<id>{{ post.id }}</id>
	<link rel="alternate" type="text/html" href="http://{{ site.hostname }}{{ post.url }}"/>
	<updated>{{ post.date_updated | date: "%Y-%m-%dT%H:%M:%SZ" }}</updated>
	<published>{{ post.date | date: "%Y-%m-%dT%H:%M:%SZ" }}</published>
	{% if page.description %}<summary>{{ page.description }}</summary>{% endif %}
	{% for category in post.categories %}
		<category term="{{ category | downcase }}" />
	{% endfor %}
	<content type="html">{{ post.content | xml_escape }}</content>
</entry>
{% endfor %}

</feed>
