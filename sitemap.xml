---
layout: nil
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<!-- Home -->
	<url>
		<loc>http://{{ site.host }}/</loc>
		<lastmod>{{ site.time | date: "%Y-%m-%d" }}</lastmod>
		<changefreq>yearly</changefreq>
		<priority>1.0</priority>
	</url>
	
	<!-- Locales -->
	<url>
		<loc>http://{{ site.host }}/en/</loc>
		<lastmod>{{ site.time | date: "%Y-%m-%d" }}</lastmod>
		<changefreq>weekly</changefreq>
		<priority>1.0</priority>
		<xhtml:link rel="alternate" hreflang="en" href="http://{{ site.host }}/en/" />
		<xhtml:link rel="alternate" hreflang="fr" href="http://{{ site.host }}/fr/" />
	</url>
	<url>
		<loc>http://{{ site.host }}/fr/</loc>
		<lastmod>{{ site.time | date: "%Y-%m-%d" }}</lastmod>
		<changefreq>weekly</changefreq>
		<priority>1.0</priority>
		<xhtml:link rel="alternate" hreflang="en" href="http://{{ site.host }}/en/" />
		<xhtml:link rel="alternate" hreflang="fr" href="http://{{ site.host }}/fr/" />
	</url>
	
	<!-- Pages and Posts -->
	{% for page in site.posts %}
	<url>
		<loc>http://{{ site.host }}{{ page.url }}</loc>
		{% if page.last_updated %}
		<lastmod>{{ page.last_updated | date: "%Y-%m-%d" }}</lastmod>
		{% elsif page.date %}
		<lastmod>{{ page.date | date: "%Y-%m-%d" }}</lastmod>
		{% else %}
		<lastmod>{{ site.time | date: "%Y-%m-%d" }}</lastmod>
		{% endif %}
	</url>
	{% endfor %}

	{% for page in site.pages %}
	<url>
		<loc>http://{{ site.host }}{{ page.url }}</loc>
		{% if page.last_updated %}
		<lastmod>{{ page.last_updated | date: "%Y-%m-%d" }}</lastmod>
		{% elsif page.date %}
		<lastmod>{{ page.date | date: "%Y-%m-%d" }}</lastmod>
		{% else %}
		<lastmod>{{ site.time | date: "%Y-%m-%d" }}</lastmod>
		{% endif %}
		{% if page.changefreq %}<changefreq>{{ page.changefreq }}</changefreq>{% endif %}
		{% if page.priority %}<priority>{{ page.priority }}</priority>{% endif %}
	</url>
	{% endfor %}

</urlset>
